				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.learning</groupId>
				<artifactId>payment-messaging</artifactId>
				<version>${project.version}</version>
			</dependency>
			
			<dependency>
				<groupId>com.learning</groupId>
