			</dependency>
			<dependency>
				<groupId>com.learning</groupId>
				<artifactId>customer-dataaccess</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>com.learning</groupId>
				<artifactId>customer-messaging</artifactId>
